<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    tools:context="com.applay.haetae.haetae_gugak.HT_EduActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/ht_educationback">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/edutop1"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="20dp"
        android:id="@+id/inneredu"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/btnAkbo"
            android:layout_weight="1"
            android:background="@drawable/makbobtn"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/btnMusic"
            android:layout_weight="1"
            android:background="@drawable/mmusicbtn"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/mbookbtn"
            android:id="@+id/btnBook"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/mfillbtn"
            android:id="@+id/btnFeel"/>

    </LinearLayout>

</LinearLayout>
